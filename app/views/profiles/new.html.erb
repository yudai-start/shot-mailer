<h1>新規プロフィール作成</h1>
  <%= form_with model:@profile, local: true do |form| %>
    <%= form.text_field :name, placeholder: :名前, class: :form__name %>
    <%= form.text_field :email, placeholder: :ご家族のメーるアドレス, class: :form__address %>
    <%= form.file_field :image %>
    <%= form.submit "送信する", class: :form__btn %>
  <% end %>